<resources xmlns:tools="http://schemas.android.com/tools">

<!--     Text styles-->
    <style name="heading" >
        <item name="fontFamily">@font/librebold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/heading</item>
    </style>

    <style name="text" >
        <item name="fontFamily">@font/librelight</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text</item>
    </style>
    <style name="start_timer" >
        <item name="fontFamily">@font/librebold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/start_timer</item>
    </style>

    <style name="video_text" >
        <item name="fontFamily">@font/librelight</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_sub_heading</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="button" >
        <item name="fontFamily">@font/librelight</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
